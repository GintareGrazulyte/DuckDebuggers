@model DOL.Objects.Item
@{
    ViewBag.Title = "Item - " + Model.Name;
}
<h2>@Model.Name</h2>
<div id="item-details">
    <p>
        <em>Category:</em>
        @Model.Category.Name
    </p>
    <p>
        <em>Price:</em>
        @String.Format("{0:F}",
     Model.Price)
    </p>
    <div class="fb-comments" data-width="230" data-numposts="5"></div>
</div>