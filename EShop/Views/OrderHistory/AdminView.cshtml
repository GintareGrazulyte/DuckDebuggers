@model IEnumerable<BOL.Orders.Order>

@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderStatus)
        </th>
        <th></th>
    </tr>

@foreach (var order in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => order.DateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => order.OrderStatus)
        </td>
        <td>
            @Html.ActionLink("Edit status", "ChangeOrderStatus", new { id= order.Id })
            @*@Html.ActionLink("Details", "Details", new { id= order.Id }) |*@
        </td>
    </tr>
}

</table>
