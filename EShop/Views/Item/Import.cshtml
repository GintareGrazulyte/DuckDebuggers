
@{
    ViewBag.Title = "Import";
}

<h2>Import</h2>
<p>Right after finish of the import, an information about it will be sent to your email</p>
<p>Required excel file structure with example values:</p>
<p><img src="@Url.Content("~/Content/Images/ExcelExampleStructure.PNG")" alt="Example" style="height:100px; width:auto;" /></p>

@{ Html.BeginForm("ImportItemsFromFile", "Item", FormMethod.Post);}
   <p>File path @Html.TextBox("path", null,  new { type = "file" }) @Html.ValidationSummary(true, "", new { @class = "text-danger" })</p> 
    <input type="submit" value="Import" class="btn btn-primary" />
@{ Html.EndForm();}