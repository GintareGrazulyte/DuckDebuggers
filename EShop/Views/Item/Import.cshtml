@{
    ViewBag.Title = "Import";
}

<style>
    .container {
        position: relative;
    }

    .image {
        opacity: 1;
        display: block;
        width: 70%;
        height: auto;
        transition: .5s ease;
        backface-visibility: hidden;
    }

    .middle {
        transition: .5s ease;
        opacity: 0;
        position: absolute;
        top: 50%;
        left: 35%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
    }

    .container:hover .image {
        opacity: 0.3;
    }

    .container:hover .middle {
        opacity: 1;
    }
</style>

<h2>Import</h2>
<p>Right after finish of the import, an information about it will be sent to your email</p>
<p>Required excel file structure with example values:</p>
<div class="container">
    <img src="@Url.Content("~/Content/Images/ImportExample.PNG")" alt="Example" style="height:100%" class="image" />
    <div class="middle">
            <p>@Html.ActionLink("Download example", "DownloadImportExample", "Item", null, new { @class = "btn btn-secondary" })</p>
    </div>
</div>

<p>
    @{ Html.BeginForm("ImportItemsFromFile", "Item", FormMethod.Post, new { enctype = "multipart/form-data" });}
<p>File name: @Html.TextBox("file", null, new { type = "file" }) @Html.ValidationSummary(true, "", new { @class = "text-danger" }) </p>
<input type="submit" value="Import" class="btn btn-primary" />
@{ Html.EndForm();}
</p>